<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="struts2" extends="struts-default">

        <!--用户登陆-->
        <action name="login" class="userAction" method="login">
            <result name="success">index.jsp</result>
            <result name="error">error.jsp</result>
        </action>

        <!--学生注册-->
        <action name="stuRegister" class="studentAction" method="apply">
            <result name="success">addSuccess.jsp</result>
            <result name="error">addError.jsp</result>
        </action>


        <!--学生审核-->
        <action name="setExStatus" class="examAction" method="setExStatus">
            <result name="success" type="chain">showAllNoRegStu</result>
            <result name="error">error.jsp</result>
        </action>

        <!--显示所有待审核学生信息-->
        <action name="showAllNoRegStu" class="examAction" method="queryAllStuToBeAudited">
            <result name="success">stuToBeAudited.jsp</result>
        </action>

        <!--显示所有待审核组织部门人员信息-->
        <action name="showAllNoRegDepart" class="examAction" method="queryAllDepartToBeAudited">
            <result name="success">departToBeAudited.jsp</result>
        </action>

        <!--组织部门人员注册-->
        <action name="departmentRegister" class="departmentAction" method="addDepartment">
            <result name="success">addSuccess.jsp</result>
            <result name="error">error.jsp</result>
        </action>

    </package>
</struts>