<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="struts2" extends="struts-default">
        <action name="login" class="userAction" method="login">
            <result name="success">index.jsp</result>
            <result name="error">error.jsp</result>
        </action>

        <action name="register" class="studentAction" method="apply">
            <result name="success">addStudentSuccess.jsp</result>
            <result name="error">addStudentError.jsp</result>
        </action>

        <action name="showStu" class="studentAction" method="showStu">
            <result name="success">stuMenu.jsp</result>
        </action>

        <action name="setExStatus" class="examAction" method="setExStatus">
            <result name="success">stuMenu.jsp</result>
            <result name="error">error.jsp</result>
        </action>
    </package>
</struts>